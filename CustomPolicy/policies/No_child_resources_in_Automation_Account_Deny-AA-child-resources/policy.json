{
 "properties": {
  "displayName": "No child resources in Automation Account",
  "policyType": "Custom",
  "mode": "Indexed",
  "description": "This policy denies the creation of child resources on the Automation Account",
  "metadata": {
   "version": "1.0.0",
   "category": "Automation",
   "createdBy": "45b62c86-f0c2-4a03-89e2-c149190b4d7a",
   "createdOn": "2021-10-04T13:38:03.3770445Z",
   "updatedBy": null,
   "updatedOn": null
  },
  "parameters": {
   "effect": {
    "type": "String",
    "metadata": {
     "displayName": "Effect",
     "description": "Enable or disable the execution of the policy"
    },
    "allowedValues": [
     "Audit",
     "Deny",
     "Disabled"
    ],
    "defaultValue": "Deny"
   }
  },
  "policyRule": {
   "if": {
    "allOf": [
     {
      "field": "type",
      "in": [
       "Microsoft.Automation/automationAccounts/runbooks",
       "Microsoft.Automation/automationAccounts/variables",
       "Microsoft.Automation/automationAccounts/modules",
       "Microsoft.Automation/automationAccounts/credentials",
       "Microsoft.Automation/automationAccounts/connections",
       "Microsoft.Automation/automationAccounts/certificates"
      ]
     }
    ]
   },
   "then": {
    "effect": "[parameters('effect')]"
   }
  }
 },
 "id": "/providers/Microsoft.Management/managementGroups/ARCH03/providers/Microsoft.Authorization/policyDefinitions/Deny-AA-child-resources",
 "type": "Microsoft.Authorization/policyDefinitions",
 "name": "Deny-AA-child-resources"
}